{
  "name": "davistore-backend",
  "version": "1.0.0",
  "description": "E-commerce Backend API with Express, TypeScript and PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postbuild": "node setup-database.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "db:setup": "node setup-database.js",
    "db:reset": "powershell -ExecutionPolicy Bypass -File src/database/scripts/reset-and-migrate.ps1",
    "db:migrate": "powershell -ExecutionPolicy Bypass -File src/database/scripts/migrate.ps1",
    "db:migrate:file": "powershell -ExecutionPolicy Bypass -File src/database/scripts/migrate.ps1 -MigrationFile",
    "db:find-psql": "powershell -ExecutionPolicy Bypass -File src/database/scripts/find-psql.ps1",
    "db:backup": "bash src/database/scripts/backup.sh",
    "db:restore": "bash src/database/scripts/restore.sh"
  },
  "keywords": [
    "ecommerce",
    "express",
    "typescript",
    "postgresql",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
